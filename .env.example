# API Configuration
# Choose either Cerebras or Groq as your LLM provider

# Cerebras Configuration (High-performance cloud AI)
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Groq Configuration (Alternative to Cerebras)
GROQ_API_KEY=your_groq_api_key_here

# LLM Provider Selection ('cerebras' or 'groq')
LLM_PROVIDER=groq

# Model Configuration
LLM_MODEL=llama-3.1-8b-instant

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=document_intelligence

# Vector Database
VECTOR_DB_PATH=./data/vector_db

# Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Document Processing
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed

# Agent Configuration
MAX_ITERATIONS=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Note: Get your Cerebras API key from https://cloud.cerebras.ai/
# Note: Get your Groq API key from https://console.groq.com/